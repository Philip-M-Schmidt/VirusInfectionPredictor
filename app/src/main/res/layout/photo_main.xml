<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfadasApps.Virus_Infection_Predictor.photoActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/camera_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/detect_virus_btn">
    </com.wonderkiln.camerakit.CameraView>

     <com.alfadasApps.Virus_Infection_Predictor.Helper.GraphicOverlay
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_above="@+id/detect_virus_btn"
         android:id="@+id/graphic_correct_overlay"/>


    <Button
        android:id="@+id/detect_virus_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:backgroundTint="#FF5A5A"
        android:text="detect covid_19"
        android:textSize="30sp" />

    <Button
        android:id="@+id/switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detect_virus_btn"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#989298"
        android:text="switch cam" />

</RelativeLayout>